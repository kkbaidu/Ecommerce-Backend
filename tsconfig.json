{
  "compilerOptions": {
    "target": "ES2020",
    "module": "NodeNext",
    "outDir": "dist",
    "rootDir": "./",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "resolveJsonModule": true,
    "moduleResolution": "NodeNext",
    "allowJs": true,
    "checkJs": false,
    "noImplicitAny": false
  },
  "include": ["**/*.ts", "**/*.js", "public/browser-app.jts"],
  "exclude": ["node_modules", "dist"]
}
